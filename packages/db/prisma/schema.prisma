generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Document {
  id             String   @id @default(uuid())
  filename       String
  originalSize   Int
  compressedSize Int?
  mimeType       String
  status         Status   @default(PENDING)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum Status {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}